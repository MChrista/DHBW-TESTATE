
public class BresenhamLogik {
	public final int SIZE = 25;
	int [][] feld = new int[SIZE][SIZE];
	
	public void doing(int radius){
		if(radius <=0 || radius > 12){
			int y = radius;
			int x = 0;
			
			
			zeichne(x,y);
			do{
				x++;
				double kreispunkt = Math.sqrt(radius * radius - x * x);
				if((y-kreispunkt) > 0.5){
					y--;
				}
				zeichne(x, y);
				
			}while(x!=y);
			
			/**
			 * Setze den ersten Punkt bei  x = 0  und  y = r ;   P(0/r)     
			  WIEDERHOLE                                                   
			     Erhöhe x um 1                                             
			     WENN P(x/y-1) näher an der Kreislinie liegt als P(x/y)    
			          DANN vermindere y um 1      (*)                      
			     Setze den Punkt  P(x/y)                                   
			  BIS x = y 
			 */
			
		}else{
			System.out.println("Ungültiger Radius");
		}
		
	}
	
	public void zeichne(int x, int y){
		y = 13 - y;
		feld[x+12][y] = 1;
		return;
	}
	
	
	
	public void print(){
		String buffer = "";
		for(int i = 0;i<SIZE;i++){
			for(int j=0;j<SIZE;j++){
				System.out.print(feld[i][j] + " ");
			}
			System.out.print("\n");
		}
	}

}
